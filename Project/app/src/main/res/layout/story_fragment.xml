<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/campus"
            android:src="@drawable/campus"
            android:id="@+id/imageView"
            android:adjustViewBounds="true"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id="@+id/head"
            android:adjustViewBounds="true" android:layout_alignParentRight="true"
            android:layout_above="@+id/next_button" android:layout_alignParentEnd="true" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp" android:layout_marginBottom="73dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/next_button"
            android:layout_marginBottom="21dp"
            android:layout_marginRight="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/people1"
            android:layout_marginBottom="159dp"
            android:layout_marginLeft="58dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:layout_above="@id/Club"
            android:layout_height="wrap_content"
            android:id="@+id/talk"
            android:layout_alignLeft="@+id/people1"/>
    <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/next_button"
            android:id="@+id/Club"
            android:layout_alignStart="@+id/people1"
            android:layout_marginTop="9dp"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_alignLeft="@+id/people1"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/choice1"
              android:textSize="30sp"
              android:textStyle="bold"
              android:layout_centerHorizontal="true"
              android:layout_above="@id/choice2"

              android:layout_margin="10sp"

    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/choice2"
              android:textSize="30sp"
              android:textStyle="bold"
              android:layout_centerHorizontal="true"
              android:layout_above="@id/choice3"

    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:layout_centerHorizontal="true"
              android:textSize="20sp"
              android:id="@+id/choice3"
              android:layout_above="@id/next_button"
    />
</RelativeLayout>